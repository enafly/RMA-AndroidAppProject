<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#cacdd1"
    tools:context=".FragmentDetalji"
    android:id="@+id/fragmentDetalji">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:background="#e8d0aa">
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/glavni"
        android:background="#cacdd1">


        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prvi"
        android:weightSum="1">


                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tvName" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Genre"
                    android:id="@+id/tvGenre" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Website"
                    android:id="@+id/tvWebSite"
                    android:autoLink="web" />
                    <ScrollView
                        android:layout_width="301dp"
                        android:layout_height="33dp"
                        android:id="@+id/scrollView3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/bio"
                            android:inputType="textMultiLine"
                            android:ems="10"
                            android:id="@+id/tvBio"/>

                    </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ToggleButton
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton"
                    android:background="#3f51b4"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <Button
                        android:layout_width="77dp"
                        android:layout_height="30dp"
                        android:text="@string/posalji"
                        android:id="@+id/posalji"
                        android:background="#3f51b4"
                        android:textColor="#ffffff"
                    android:layout_gravity="left|top"
                    android:layout_alignTop="@+id/toggleButton"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dijeteFragment">

        </FrameLayout>


    </LinearLayout>

</FrameLayout>